<Button IsSmall="true"
        IsOutLine="false"
        IsWidth100="false"
        BootstrapColor="BootstrapColor.Link"
        title="@(Resources.ButtonCaptions.DeleteImage)"
        OnCLick="args => OnCLick.InvokeAsync(args)">
    <i class="bi bi-card-image"></i>
    @(Resources.ButtonCaptions.DeleteImage)
</Button>

@code {
    [Parameter]
    public EventCallback<MouseEventArgs> OnCLick { get; set; }
}