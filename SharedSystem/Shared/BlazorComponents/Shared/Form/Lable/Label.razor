<label for="@(For)" class="@(Class)">
    @if (ChildContent is null)
    {
        @: هیچ عنوانی ثبت نشده
    }
    else
    {
        @(ChildContent)
    }
</label>

@code {
    [Parameter] public string? For { get; set; }

    [Parameter] public RenderFragment? ChildContent { get; set; }
    
    [Parameter] public string? Class { get; set; }
}