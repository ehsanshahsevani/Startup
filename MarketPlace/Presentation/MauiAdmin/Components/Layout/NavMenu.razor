<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand text-dark" href="">
            <img src="images/logo-black.png" width="20"/>
            پنل ادمین فروشگاه
        </a>
        <button title="@(Resources.DataDictionary.Menu)" class="navbar-toggler" @onclick="ToggleNavMenu">
            <i class="navbar-toggler-icon text-light"></i>
        </button>
    </div>
</div>

<div class="@(NavMenuCssClass) nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link px-1" href="" Match="NavLinkMatch.All">
                <span class="me-1">
                    <i class="bi bi-house-door-fill"></i>
                    @(Resources.DataDictionary.Home)
                </span>
            </NavLink>
        </div>
        <SlideDropdown Title="@(Resources.DataDictionary.ShopsManagement)">
            <li>
                <NavLink class="nav-link px-1" href="shop">
                    <span class="me-1">
                        <i class="bi bi-columns-gap"></i>
                        @(Resources.DataDictionary.Shop)
                    </span>
                </NavLink>
            </li>
        </SlideDropdown>
        
        <SlideDropdown Title="@(Resources.DataDictionary.CreateProduct)">
            <li>
                <NavLink class="nav-link px-1" href="category">
                    <span class="me-1">
                        <i class="bi bi-bar-chart-steps"></i>
                        @(Resources.DataDictionary.Category)
                    </span>
                </NavLink>
            </li>

            <li>
                <NavLink class="nav-link px-1" href="product-title">
                    <span class="me-1">
                        <i class="bi bi-cursor-text"></i>
                        @(Resources.DataDictionary.ProductTitle)
                    </span>
                </NavLink>
            </li>


            <li>
                <NavLink class="nav-link px-1" href="attribute">
                    <span class="me-1">
                        <i class="bi bi-three-dots-vertical"></i>
                        @(Resources.DataDictionary.Attribute)
                    </span>
                </NavLink>
            </li>

            <li>
                <NavLink class="nav-link px-1" href="units">
                    <span class="me-1">
                        <i class="bi bi-diagram-3"></i>
                        @(Resources.DataDictionary.Units)
                    </span>
                </NavLink>
            </li>

            <li>
                <NavLink class="nav-link px-1" href="value-management">
                    <span class="me-1">
                        <i class="bi bi-app"></i>
                        @(Resources.DataDictionary.Value)
                    </span>
                </NavLink>
            </li>

            <li>
                <NavLink class="nav-link px-1" href="attribute-value">
                    <span class="me-1">
                        <i class="bi bi-app-indicator"></i>
                        @(Resources.DataDictionary.AttributeValue)
                    </span>
                </NavLink>
            </li>

            <li>
                <NavLink class="nav-link px-1" href="product-attribute-value">
                    <span class="me-1">
                        <i class="bi bi-columns-gap"></i>
                        @(Resources.DataDictionary.ProductAttributeValue)
                    </span>
                </NavLink>
            </li>
        </SlideDropdown>

        <SlideDropdown Title="@(Resources.DataDictionary.ProductsManager)">
            <li>
                <NavLink class="nav-link px-1" href="product-create">
                    <span class="me-1">
                        <i class="bi bi-cart-plus"></i>
                        @(Resources.DataDictionary.ProductCreate)
                    </span>
                </NavLink>
            </li>
            <li>
                <NavLink class="nav-link px-1" href="products">
                    <span class="me-1">
                        <i class="bi bi-boxes"></i>
                        @(Resources.DataDictionary.Products)
                    </span>
                </NavLink>
            </li>
        </SlideDropdown>
    </nav>
</div>

@code {
    private bool _collapseNavMenu = true;

    private string? NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }

}